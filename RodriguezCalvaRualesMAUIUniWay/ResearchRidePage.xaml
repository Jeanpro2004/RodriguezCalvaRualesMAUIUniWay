                            </Picker>
                        </Frame>
                    </VerticalStackLayout>

                    
                    <Button x:Name="SearchButton"
                            Text="üîç Buscar Viajes"
                            BackgroundColor="#8B0000"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            FontSize="16"
                            FontAttributes="Bold"
                            Margin="0,10,0,0"
                            Clicked="OnSearchClicked"/>

                </VerticalStackLayout>
