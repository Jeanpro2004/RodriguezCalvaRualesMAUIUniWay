                                    Title="Selecciona"
                                    TitleColor="#95A5A6"
                                    TextColor="#2C3E50"
                                    BackgroundColor="Transparent"
                                    Margin="15,0">
                                <Picker.Items>
                                    <x:String>1 pasajero</x:String>
                                    <x:String>2 pasajeros</x:String>
                                    <x:String>3 pasajeros</x:String>
                                    <x:String>4 pasajeros</x:String>
